<% if !flash[:notice].blank? %>
   <div class = "alert alert-info">
      <%= flash[:notice] %>
   </div>
<% end %>

<div class="navigation-bar">
  <%= link_to "New Agreement via Upload", '/agreements/new', class: "action-button" %>
  <%= link_to "New Agreement via Template", '/template/new', class: 'action-button' %>
  <%= link_to "New Agreement via PDF Form Fields", '/pdf_agreements/new', class: 'action-button' %>
</div>

<table class = "table table-bordered table-striped">
   <thead>.
      <tr>
         <th>Names</th>
         <th>Download Link</th>
         <th>Pre-generated Link</th>
         <th>Edit View Link</th>
         <th>Console View Link</th>
         <th>Correct View Link</th>
         <th>Status </th>
         <th> </th>
      </tr>
   </thead>

   <tbody>
      <% @agreements.each do |a| %>
         <tr>
            <td><%= a.names %></td>
            <td><%= link_to "Download Agreement", a.attachment_url %></td>
            <td><%= link_to "Saved Preview URL", a.preview_url, target: "_blank" %></td>
            <td><%= link_to "Edit View URL", "/pdf_agreements/preview?id=#{a.id}", target: "_blank" %></td>
            <td><%= link_to "Console View URL", "/pdf_agreements/console?id=#{a.id}", target: "_blank" %></td>
            <td><%= link_to "Correct View URL", "/pdf_agreements/correct?id=#{a.id}", target: "_blank" %></td>
            <td><%= a.status %></td>
            <td><%= button_to "Delete",  a, method: :delete, class: "btn btn-danger", confirm: "Are you sure that you wish to delete #{a.names}?" %></td>
         </tr>
      <% end %>
   </tbody>

</table>
